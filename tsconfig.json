{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@grcense/lib": ["./packages/lib/src"],
      "@grcense/lib/*": ["./packages/lib/src/*"],
      "@grcense/ui": ["./packages/ui/src"],
      "@grcense/ui/*": ["./packages/ui/src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ]
}
